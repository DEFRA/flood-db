####### If table already exists then we need to truncate the table (ie if this is not the first load)
psql ${LFW_DATA_DB_CONNECTION} -c "TRUNCATE TABLE u_flood.river;"

###### Import columns 1 to 3 from csv into river table
cut -f1-4 -d, ./rivers.csv | psql ${LFW_DATA_DB_CONNECTION} -c "\copy u_flood.river(id, name, qualified_name, river_id) from STDIN with delimiter as ',' CSV HEADER"

